<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:videoPlayer="clr-namespace:Octane.Xam.VideoPlayer;assembly=Octane.Xam.VideoPlayer"
             x:Class="HandyCareFamiliar.Page.VideoPage">
    <ScrollView>
        <StackLayout Padding="15">
            <videoPlayer:VideoPlayer Source="{Binding VideoPaciente}" AutoPlay="True"/>
            <Label Text="{Binding Video.VidDescricao}" />
        </StackLayout>
    </ScrollView>
</ContentPage>