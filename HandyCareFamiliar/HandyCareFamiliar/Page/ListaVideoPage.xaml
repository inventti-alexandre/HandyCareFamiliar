<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandyCareFamiliar.Page.ListaVideoPage">
    <StackLayout>
        <ActivityIndicator Color="Blue" IsRunning="{Binding oHorario.ActivityRunning, Mode=TwoWay}"
                           IsVisible="{Binding oHorario.ActivityRunning}" />
        <ListView x:Name="lstVideos" ItemsSource="{Binding Videos, Mode=TwoWay}"
                  SelectedItem="{Binding SelectedVideo, Mode=TwoWay}" IsVisible="True" RowHeight="70">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="10">
                            <Label Text="{Binding VidDescricao}" TextColor="Black"
                                   HorizontalOptions="StartAndExpand" FontAttributes="Bold" FontSize="20" />
                            <Label Text="{Binding CreatedAt}" TextColor="Black"
                                   HorizontalOptions="StartAndExpand" FontSize="15" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>